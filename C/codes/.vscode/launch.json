{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            // CMakeLists.txt中project()中配置的项目名
            "program": "${workspaceFolder}/build/c", 
            "args": [],
            // 是否在main函数第一行进入调试状态
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            // 是否使用外部console显示debug信息
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask":"Build",
            "miDebuggerPath": "D:\\mingw64\\bin\\gdb.exe"
        }
    ]
}